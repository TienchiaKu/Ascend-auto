@model DDD_2024.Models.DDD_Employee
@inject DDD_2024.Interfaces.IEmployeeService EmployeeService

@{
    ViewData["Title"] = "Edit";
}

<h1>員工資料更新</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmpID" />
            <div class="form-group">
                <label asp-for="EmpName" class="control-label"></label>
                <input asp-for="EmpName" class="form-control" />
                <span asp-validation-for="EmpName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OnDuty" class="control-label"></label>
                <select asp-for="OnDuty" asp-items="EmployeeService.YesNo" class="form-control"></select>
                <span asp-validation-for="OnDuty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PM" class="control-label"></label>
                <select asp-for="PM" asp-items="EmployeeService.YesNo" class="form-control"></select>
                <span asp-validation-for="PM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sales" class="control-label"></label>
                <select asp-for="Sales" asp-items="EmployeeService.YesNo" class="form-control"></select>
                <span asp-validation-for="Sales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FAE" class="control-label"></label>
                <select asp-for="FAE" asp-items="EmployeeService.YesNo" class="form-control"></select>
                <span asp-validation-for="FAE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RBU" class="control-label"></label>
                <select asp-for="RBU" asp-items="EmployeeService.YesNo" class="form-control"></select>
                <span asp-validation-for="RBU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" readonly />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確認更新" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回清單</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
