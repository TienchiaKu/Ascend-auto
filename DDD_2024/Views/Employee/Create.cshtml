@model DDD_2024.Models.EmployeeM
@inject DDD_2024.Interfaces.IEmployeeService EmployeeService
@{
    ViewData["Title"] = "Create";
}

<h1>員工資料建立</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row" style="margin-top:6px">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="EmpID" class="control-label"></label>
                <input asp-for="EmpID" class="form-control" readonly />
                <span asp-validation-for="EmpID" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="EmpName" class="control-label"></label>
                <input asp-for="EmpName" class="form-control" />
                <span asp-validation-for="EmpName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
        </div>
    </div>
    <div class="row" style="margin-top:6px">
        <div class="col-md-4">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Region" class="control-label"></label>
                    <select asp-for="Region" asp-items="EmployeeService.GetRegion" class="form-control"></select>
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="userPWD" class="control-label"></label>
                <input asp-for="userPWD" class="form-control" />
                <span asp-validation-for="userPWD" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="OnDuty" class="control-label"></label>
                <select asp-for="OnDuty" asp-items="EmployeeService.YesNo" class="form-control"></select>
                <span asp-validation-for="OnDuty" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top:6px">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="確認建立" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">返回清單</a>
            </div>
        </div>
        <div class="col-md-8">
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}